<% layout('default/layout') -%>

<div class="row">
  <!-- left column -->
  <div class="col-md-12">
    <!-- general form elements -->
    <div class="box box-primary">
      <!-- /.box-header -->
      <!-- form start -->
      <form role="form" action="/dadosgerais" method="POST">
        <input type="hidden" name="id" value="<%= item.id %>" />
        <div class="box-footer">
          <button type="submit" class="btn btn-success" name="action" value="Gravar">Gravar</button>
          <button type="submit" class="btn btn-primary" name="action" value="Cancelar">Cancelar</button>
        </div>
        <div class="box-body">          
            <div class="form-group">
                <label for="logotipo">Logotipo</label>
                <input class="form-control" type="text" id="logotipo" name="logotipo" value="<%= item.logotipo %>" />
            </div>
            <div class="form-group">
                <label for="linkpregacoes">Link Pregações</label>
                <input class="form-control" type="text" id="linkpregacoes" name="linkpregacoes" value="<%= item.linkpregacoes %>" />
            </div>
            <div class="form-group">
                <label for="linkradio">Link Rádio Online</label>
                <input class="form-control" type="text" id="linkradio" name="linkradio" value="<%= item.linkradio %>" />
            </div>
            <div class="form-group">
                <label for="latitude">Latitude</label>
                <input class="form-control" type="text" id="latitude" name="latitude" value="<%= item.latitude %>" />
            </div>
            <div class="form-group">
                <label for="longitude">Longitude</label>
                <input class="form-control" type="text" id="longitude" name="longitude" value="<%= item.longitude %>" />
            </div>
            <div class="form-group">
                <label for="linkfacebook">Link Facebook</label>
                <input class="form-control" type="text" id="linkfacebook" name="linkfacebook" value="<%= item.linkfacebook %>" />
            </div>
            <div class="form-group">
                <label for="linkyoutube">Link Youtube</label>
                <input class="form-control" type="text" id="linkyoutube" name="linkyoutube" value="<%= item.linkyoutube %>" />
            </div>
            <div class="form-group">
                <label for="linkinstagram">Link Instagram</label>
                <input class="form-control" type="text" id="linkinstagram" name="linkinstagram" value="<%= item.linkinstagram %>" />
            </div>
        </div>
        <!-- /.box-body -->
      </form>
    </div>
    <!-- /.box -->
  </div>
  <!-- /.box -->
</div>
<!-- /.box -->